---
title: "Global Footer"
layout: component.hbs
module: true
---

<!-- module:global-footer -->
{{#parseFixture 'global-footer.json'}}
	<footer id="js-global-footer" class="global-footer">

		<section class="global-footer__info">

			<h2>Hi! I'm Ian Moffitt.</h2>

			<p>I'm a {{> link title="front-end" url="https://css-tricks.com/poll-results-front-end-front-end/" noop=true}} developer working in Pittsburgh, PA.</p>

			{{> logo }}

		</section>

		<section class="global-footer__links">
			{{#if links}}
				<ul class="global-footer__list">
					{{#each links}}
						<li>{{link this}}</li>
					{{/each}}
				</ul>
			{{/if}}

			<ul class="global-footer__list">
				{{#withSort (items "pages") 'data.title'}}
					{{#if this.data.tags}}
						{{#inArray this.data.tags 'footer'}}
							<li>
								<a class="global-footer__link" href="{{formatIndexPageUrl this }}">{{ this.data.title }}</a>
							</li>
						{{/inArray}}
					{{/if}}
				{{/withSort}}
			</ul>

		</section>

	</footer>
{{/parseFixture}}
<!-- end module:global-footer -->

