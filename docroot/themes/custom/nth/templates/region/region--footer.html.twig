{#
/**
 * @file
 * Default theme implementation to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 *
 * @ingroup themeable
 */
#}

<footer id="js-global-footer" data-region="{{ region }}" {{ attributes.addClass('global-footer') }}>
    <section class="global-footer__info">
        {{ content }}
        <p class="global-footer__copyright">&copy; Ian Moffitt {{ "now"|date("Y") }}</p>
    </section>
    <section class="global-footer__links">
        {{ drupal_menu('footer') }}
    </section>
</footer>
