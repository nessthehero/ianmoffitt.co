{{#gt this.length 1}}
	<picture>
		{{#each this}}
			{{#eq @index @last}}
				<source srcset="{{src}}"{{#if media}} media="{{media}}"{{/if}} type="image/jpeg" />
			{{else}}
				<img src="{{src}}" alt="{{alt}}">
			{{/eq}}
		{{/each}}
	</picture>
{{else}}
	{{#each this}}
		<img src="{{src}}" alt="{{alt}}">
	{{/each}}
{{/gt}}
