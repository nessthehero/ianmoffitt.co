<article class="content{{#if style}} {{style}}{{/if}}">

	{{#if img}}
		<aside class="content__aside">
			<figure class="content__figure">
				{{render '@image' img }}

				<picture>
					<source srcset="https://via.placeholder.com/500 1x" media="screen and (min-width: 1920px)" type="image/jpeg">

					<img src="https://via.placeholder.com/400x320" alt="Cat with headphones">
				</picture>
			</figure>
		</aside>
	{{/if}}

	<div class="content__body">
		{{#> @user-markup }}

			<header>
				<h1>{{ title }}</h1>
				{{#if time}}
					<time>{{time}}</time>
				{{/if}}
			</header>

			<p>{{copy}}</p>

		{{/@user-markup}}
	</div>

	<footer class="content__footer">
		<ul class="links inline">
			<li class="node-readmore">
				<a href="/hello-world" rel="tag" title="Hello World" hreflang="en">Read more<span class="visually-hidden"> about Hello World</span></a>
			</li>
		</ul>
	</footer>

</article>
