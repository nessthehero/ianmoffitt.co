<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<link media="all" rel="stylesheet" href="{{ path '/css/main.css' }}">
	<title>{{ _target.title }} - Preview</title>

	<script type="text/javascript" src="{{ path '/js/plugins/modernizr.js' }}"></script>
	<style type="text/css">
		td {
			min-width: 400px;
			padding: 4px;
		}

		tr:nth-child(odd) td {
			background-color: lightgray;
		}
	</style>
</head>
<body>

	{{ render '@svg' }}

	<div class="user-markup">
		{{{ yield }}}
	</div>

	<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

	{{#if _target.context.scripts}}
		{{#each _target.context.scripts}}
			<script type="text/javascript" src="{{ scriptPath this }}"></script>
		{{/each}}
	{{/if}}

</body>
</html>
