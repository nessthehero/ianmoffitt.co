{
	"name": "ianmoffitt-dev",
	"private": true,
	"version": "2.0.0",
	"description": "Personal website for Ian Moffitt",
	"author": {
		"name": "Ian Moffitt"
	},
	"license": "ISC",
	"browserslist": [
		"last 2 versions"
	],
	"eslintConfig": {
		"root": true
	},
	"dependencies": {
		"foundation-sites": "~6.7.4",
		"highlight.js": "^11.7.0",
		"jquery": "~3.6.0",
		"modernizr": "~3.11.0",
		"underscore": "^1.13.2",
		"what-input": "~5.2.7"
	},
	"devDependencies": {
		"@babel/core": "~7.17.9",
		"@babel/preset-env": "~7.16.11",
		"@frctl/fractal": "~1.5.14",
		"autoprefixer": "~10.4.5",
		"babel-loader": "~8.2.5",
		"copy": "~0.3.2",
		"cssnano": "~5.1.7",
		"customizr": "~2.0.4",
		"del": "~6.0.0",
		"eslint-webpack-plugin": "~3.1.1",
		"eslint": "~8.14.0",
		"expand-files": "~0.8.4",
		"fs": "0.0.1-security",
		"full-icu": "~1.4.0",
		"handlebars-helpers": "~0.10.0",
		"imagemin-cli": "~5.1.0",
		"imagemin-giflossy": "~5.1.10",
		"imagemin-gifsicle": "~7.0.0",
		"imagemin-jpegtran": "~6.0.0",
		"imagemin-mozjpeg": "~8.0.0",
		"imagemin-optipng": "~7.1.0",
		"imagemin-pngquant": "~8.0.0",
		"imagemin-svgo": "~7.1.0",
		"imagemin-webp": "~5.1.0",
		"mkdirp": "~1.0.4",
		"mocha": "~9.2.2",
		"sass": "~1.51.0",
		"postcss": "~8.4.12",
		"postcss-cli": "~9.1.0",
		"postcss-loader": "~6.2.1",
		"postcss-pxtorem": "~6.0.0",
		"postcss-sass": "~0.5.0",
		"postcss-scss": "~4.0.4",
		"postcss-sorting": "~7.0.1",
		"sass-loader": "~12.6.0",
		"shelljs": "~0.8.5",
		"stylelint": "~14.8.0",
		"stylelint-scss": "~4.2.0",
		"stylelint-selector-bem-pattern": "~2.1.1",
		"svg-spritemap-webpack-plugin": "^4.5.0",
		"terser-webpack-plugin": "~5.3.1",
		"webpack": "~5.72.0",
		"webpack-cli": "~4.9.2"
	},
	"scripts": {
		"build": "npm run check && npm run clean:dist && npm run scaffold && npm run build:js && fractal build",
		"build:css": "npm run sass:build && npm run postcss:preprocess && npm run postcss:postprocess",
		"build:img": "node src/lib/imagemin.js",
		"build:js": "npx webpack --config ./src/config/webpack.config.js --mode=production",
		"check": "eslint --ignore-path src/config/.eslintignore -c src/config/.eslintrc.json src/assets/ejs && npm run sass:lint",
		"clean:dist": "node src/lib/del.js --dist",
		"clean:deploy": "node src/lib/del.js --drupal",
		"deploy": "npm run clean:deploy && node src/lib/copy.js --deploy",
		"init": "npm run build:img && npm run modernizr && npm run sass:index",
		"modernizr": "customizr -c ./src/config/modernizr-config.json",
		"postcss:fixsass": "postcss --config src/config/ -r src/assets/scss/**/*.scss --env=scss",
		"postcss:postprocess": "postcss --config src/config/ -r src/public/css/main.css --env=csspost",
		"postcss:preprocess": "postcss --config src/config/ -r src/public/css/main.css --env=csspre",
		"preprocess": "npm run preprocess:css && npm run preprocess:js && npm run modernizr",
		"preprocess:css": "npm run sass:index && npm run sass:build && npm run postcss:preprocess",
		"preprocess:css:server": "npm run sass:build && npm run postcss:preprocess",
		"preprocess:js": "npx webpack --config ./src/config/webpack.config.js",
		"preprocess:server": "npm run preprocess:css:server && npm run preprocess:js && npm run modernizr",
		"sass:build": "node src/lib/dartsass.js",
		"sass:index": "node src/lib/updateScss.js",
		"sass:lint": "npm run postcss:fixsass && stylelint \"src/assets/scss/**/*.scss\" --fix --cache --cache-location \"./.stylelintcache/\" --config \"./src/config/.stylelintrc.json\" --ignore-path \"./src/config/.stylelintignore\"",
		"scaffold": "npm run build:img && npm run preprocess",
		"start": "npm run scaffold && fractal start",
		"test": "mocha"
	}
}
